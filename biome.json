{
	"$schema": "https://biomejs.dev/schemas/2.2.4/schema.json",
	"files": {
		"ignoreUnknown": false,
		"includes": ["**", "!**/dist", "!**/node_modules", "!**/build"]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab"
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double"
		}
	},
	"assist": {
		"enabled": true,
		"actions": {
			"source": {
				"organizeImports": "on"
			}
		}
	}
}
